<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/main.css" />
</head>

<body>
    <div class="container mx-auto">        
        <!-- menu -->
        <div class="navbar bg-base-100 my-6">
            <div class="flex-1">
                <a class="btn btn-ghost text-xl" href="/cars">Rent a Car</a>
            </div>
            <div class="flex-none">
                <a class="btn btn-neutral" href="/logout">Logout</a>
            </div>
        </div>

        <!-- main content -->
        <div class="grid grid-cols-3 gap-4 mt-6">        
            <% cars.forEach(function(car) { %>
            <div class="card bg-base-100 w-96 shadow-xl card-bordered">
                <figure class="h-48">
                    <img src="<%= car.imageUrl %>" alt="<%= car.model %>" class="w-full h-full object-cover"/>
                </figure>
                <div class="card-body">
                    <h2 class="card-title"><%= car.model %></h2>
                    <% if (!car.rentedBy) { %>
                        <p>Available for booking</p>
                        <div class="card-actions justify-end">
                            <a href="/book/<%= car._id %>" class="btn btn-primary">Book Car</a>
                        </div>
                    <% } else if (String(car.rentedBy) === String(userId)) { %>
                        <p>Rented by you until <%= car.returnDate %></p>
                        <div class="card-actions justify-end">
                            <form action="/return/<%= car._id %>" method="POST">
                                <button class="btn btn-secondary">Return Car</button>
                            </form>
                        </div>
                    <% } else { %>
                        <p class="text-error">Unavailable until <%= car.returnDate %></p>
                    <% } %>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
</body>

</html>